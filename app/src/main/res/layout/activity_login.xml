<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_tablet_2"
    android:orientation="horizontal"
    tools:context="com.hardcopy.btchat.LoginActivity">


    <!-- 오른쪽 이미지 뷰 시작 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="600dp"
        android:layout_marginTop="111dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 전화번호 입력 시작-->
        <LinearLayout
            android:layout_width="424sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_010"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="010 -"
                android:textColor="#fefefe"
                android:textSize="40sp" />


            <EditText
                android:id="@+id/ed_number_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:digits="0123456789"
                android:maxLength="9"
                android:textColor="#fefefe"
                android:textSize="40sp" />

        </LinearLayout>


        <ImageView
            android:layout_width="308.5dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/line" />


        <!-- 전화번호 입력 끝-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="33dp"
            android:orientation="vertical">

            <!-- 전화번호 첫번째 줄 시작-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_num1_login"
                    android:layout_width="91.5dp"
                    android:layout_height="91.5dp"
                    android:layout_marginRight="17.5dp"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:onClick="num"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_1" />

                <ImageButton
                    android:id="@+id/btn_num2_login"
                    android:layout_width="91.5dp"
                    android:layout_height="91.5dp"
                    android:layout_marginRight="17.5dp"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:onClick="num"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_2" />

                <ImageButton
                    android:id="@+id/btn_num3_login"
                    android:layout_width="91.5dp"
                    android:layout_height="91.5dp"
                    android:layout_marginRight="114dp"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:onClick="num"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_3" />
            </LinearLayout>
            <!-- 전화번호 첫번째 줄 끝-->

            <!-- 전화번호 두번째 줄 시작-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_num4_login"
                    android:layout_width="91.5dp"
                    android:layout_height="91.5dp"
                    android:layout_marginRight="17.5dp"
                    android:layout_marginTop="17.5dp"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:onClick="num"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_4" />

                <ImageButton
                    android:id="@+id/btn_num5_login"
                    android:layout_width="91.5dp"
                    android:layout_height="91.5dp"
                    android:layout_marginRight="17.5dp"
                    android:layout_marginTop="17.5dp"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:onClick="num"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_5" />

                <ImageButton
                    android:id="@+id/btn_num6_login"
                    android:layout_width="91.5dp"
                    android:layout_height="91.5dp"
                    android:layout_marginRight="114dp"
                    android:layout_marginTop="17.5dp"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:onClick="num"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_6" />
            </LinearLayout>
            <!-- 전화번호 두번째 줄 끝-->

            <!-- 전화번호 세번째 줄 시작-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_num7_login"
                    android:layout_width="91.5dp"
                    android:layout_height="91.5dp"
                    android:layout_marginRight="17.5dp"
                    android:layout_marginTop="17.5dp"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:onClick="num"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_7" />

                <ImageButton
                    android:id="@+id/btn_num8_login"
                    android:layout_width="91.5dp"
                    android:layout_height="91.5dp"
                    android:layout_marginRight="17.5dp"
                    android:layout_marginTop="17.5dp"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:onClick="num"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_8" />

                <ImageButton
                    android:id="@+id/btn_num9_login"
                    android:layout_width="91.5dp"
                    android:layout_height="91.5dp"
                    android:layout_marginRight="114dp"
                    android:layout_marginTop="17.5dp"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:onClick="num"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_9" />
            </LinearLayout>
            <!-- 전화번호 세번째 줄 끝-->

            <!-- 전화번호 네번째 줄 시작-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_Clear_login"
                    android:layout_width="91.5dp"
                    android:layout_height="91.5dp"
                    android:layout_marginRight="17.5dp"
                    android:layout_marginTop="17.5dp"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:onClick="num"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_clear" />

                <ImageButton
                    android:id="@+id/btn_num0_login"
                    android:layout_width="91.5dp"
                    android:layout_height="91.5dp"
                    android:layout_marginRight="17.5dp"
                    android:layout_marginTop="17.5dp"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:onClick="num"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_0"

                    />

                <ImageButton
                    android:id="@+id/btn_DEL_login"
                    android:layout_width="91.5dp"
                    android:layout_height="91.5dp"
                    android:layout_marginRight="114dp"
                    android:layout_marginTop="17.5dp"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:onClick="num"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_del" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_check_login"
                android:layout_width="308.5dp"
                android:layout_height="54dp"
                android:layout_marginRight="114dp"
                android:layout_marginTop="33dp"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:onClick="num"
                android:scaleType="fitXY"
                android:src="@drawable/btn_check" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>